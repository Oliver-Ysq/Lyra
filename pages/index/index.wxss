}

.swiper {
  height: 100%;
}

.btnBox {
  display: flex;
  flex-direction: row;
}

.lastBtn {
  padding-left: 128rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
