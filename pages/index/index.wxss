}

.btn {
  background: linear-gradient(to left, rgba(255, 116, 152, 0.99) 0%, rgba(255, 116, 151, 0.96) 2%, rgb(255, 116, 116) 98%, rgb(255, 116, 116) 100%);
  box-sizing: border-box;
  width: 376rpx;
  height: 80rpx;
  color: white;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 126rpx;
  box-shadow: -2rpx -2rpx 10rpx 2rpx rgba(0, 0, 0, 0.2);
}
.btn-hover{
  background: linear-gradient(to left, rgba(255, 116, 152, 0.99) 0%, rgba(255, 116, 151, 0.96) 2%, rgb(255, 116, 116) 98%, rgb(255, 116, 116) 100%);
