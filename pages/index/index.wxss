.itemMain {
  flex: 1;
  padding: 20rpx 54rpx;
}

.itemBox {
  flex: 0.4;
  display: flex;
  flex-direction: column;
}

.choose {
  height: 100%;
}

.chooseItemBottom {
  margin-top: 30rpx;
}

.txt {
  font-size: 26rpx;
  color: #8a8a8a;
}

.buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.or {
  display: flex;
  flex-direction: coloum;
  justify-content: center;
  align-items: center;
  margin-left: 70rpx;
  margin-right: 70rpx;
}

.back {
  margin: 16rpx 54rpx 0 54rpx;
  text-align: right;
}

.item3Header {
  color: #5b63a8;
  font-size: 28rpx;
  margin: 24rpx 0 48rpx 0;
}

.item3Main {
  border-radius: 18rpx;
  height: 136rpx;
  width: 684rpx;
  line-height: 136rpx;
  text-align: center;
  background: #f0edff;
  font-size: 32rpx;
  color: #5b63a8;
}

.item3Footer{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.in {
  position: absolute !important;
  left: 30rpx !important;
  top: 4rpx !important;
  font-size: 24rpx !important;
  transition: all 300ms linear;
}

.out {
  transition: all 300ms linear;
}

