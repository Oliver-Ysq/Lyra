/* 遮罩层样式 */
.isRuleShow {
  display: block;
}

.isRuleHide {
  display: none;
}

.ruleZhezhao {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
  top: 0;
  left: 0;
  z-index: 100;
}

.ruleZhezhaoContent {
  padding: 5.33vmin 0;
  width: 45vmax;
  background: #fff;
  margin: 40vmin auto;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
}



.layout {
  box-sizing: border-box;
  width: 100vmax;
  height: 100vmin;
  background: rgb(251, 250, 255);
  position: relative;
  overflow: hidden;
}

.top {
  height: 11.73vmin;
  width: 100%;
  background: rgb(254, 254, 255);
  position: relative;
}

.back {
  position: absolute;
  width: 5.4vmax;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list {
  position: absolute;
  width: 5.4vmax;
  height: 100%;
  right: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top-main {
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
  padding-left: 9.6vmin;
}

.last {
  box-sizing: border-box;
  width: 16.8vmax;
  height: 9.6vmin;
  border-radius: 15.47vmin;
  border: 0.27vmin solid #3654FD;
  color: #3654FD;
  font-size: 3.73vmin;

  display: flex;
  justify-content: center;
  align-items: center;
}

.last-hover {
  box-sizing: border-box;
  width: 16.8vmax;
  height: 9.6vmin;
  border-radius: 15.47vmin;
  border: 0.27vmin solid #3654FD;
  color: #3654FD;
  font-size: 3.73vmin;
  background-color: #3654FD20;
  display: flex;
  justify-content: center;
  align-items: center;
}

.next {
  box-sizing: border-box;
  width: 16.8vmax;
  height: 9.6vmin;
  border-radius: 15.47vmin;
  font-size: 3.73vmin;
  border: 0.27vmin solid #3654FD;
  color: #3654FD;

  display: flex;
  justify-content: center;
  align-items: center;
}

.next-hover {
  box-sizing: border-box;
  width: 16.8vmax;
  height: 9.6vmin;
  border-radius: 15.47vmin;
  font-size: 3.73vmin;
  border: 0.27vmin solid #3654FD;
  color: #3654FD;

  background-color: #3654FD20;
  display: flex;
  justify-content: center;
  align-items: center;
}

.top-title {
  color: #4E4A80;
  font-size: 3.73vmin;
}

.myicon {
  font-size: 6vmin;
  font-weight: bold;
  color: #3654FD;
}

.staveWrapper {
  height: 75.3vmin;
  width: 100%;
  background: grey;
  overflow: scroll;
  position: relative;
}


.floating {
  background-color: #FFFFFF95;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 10vmin;
  padding-left: 1vmin;
  padding-right: 2vmin;
  border: 1px solid;
  border-color: #3654FD20;
  border-radius: 6vmin;
  position: fixed;
  z-index: 9;
  font-size: 14px;
  box-shadow: 0px 2px 3px 3px #9E9AC520;
  color: #3654FD
}

.tabbar {
  box-shadow: 1.33vmin 0 1.33vmin rgb(213, 211, 233);
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 12.8vmin;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tabbarL {
  width: calc(50% - 9vmin);
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tabbarR {
  width: calc(50% - 9vmin);
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.buttonWrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.yincha {
  width: 8.8vmin;
  height: 8.8vmin;
}

.iconBlue {
  font-size: 7.2vmin;
  font-weight: bold;
  color: #3654FD;
  margin-right: 1vmin;
}

.tab-text {
  font-size: 3.2vmin;
  color: #7A7A7A;
}

.micWrapper {
  border-radius: 50%;
  box-shadow: 2px 4px 5px 3px #B4AFEE66;
  width: 18vmin;
  height: 18vmin;
  position: absolute;
  bottom: 4vmin;
  left: calc(50% - 9vmin);
  display: flex;
  justify-content: center;
  align-items: center;
}

.mic {
  height: 10.7vmin;
  width: 10.7vmin;
}

.progressWrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.bgblue {
  background: #3654FD;
}

.progress {
  width: 16.8vmax;
}

.upload {
  width: 18.44vmax;
  height: 9vmin;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  border: 0.27vmin solid #3654FD;
  border-radius: 13.6vmin;
  font-size: 3.2vmin;
  color: #3654FD;
}

.uploadimg {
  height: 6vmin;
  width: 6vmin;
}

/** list **/
.commodity_attr_box {
  width: 100%;
  overflow: scroll;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10;
  background: #fff;
  height: 99vmin;
  text-align: center;
  padding-bottom: 4vmin;
}

.listHead {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.listTitle {
  font-size: 3.73vmin;
  height: 11.7vmin;
  line-height: 11.7vmin;
}

#back {
  border-radius: 50%;
  color: #4c69ff;
  font-size: 7vmin;
  position: absolute;
  left: 2.4vmin;
  top: 0;
}

.cell {
  display: flex;
  flex-direction: row;
  height: 12vmin;
  width: 100vmax;
}

.cell-index {
  flex: 1;
  text-align: right;
  height: 12vmin;
  line-height: 12vmin;
  font-size: 4.3vmin;
  color: black;
}

.cell-state {
  flex: 5;
  text-align: right;
  height: 12vmin;
  line-height: 12vmin;
  padding-right: 0.8vmin;
  font-size: 3.2vmin;
  color: #838383;
}

.cell-score {
  flex: 2;
  height: 12vmin;
  line-height: 12vmin;
  font-size: 3.2vmin;
  color: #3654FD;
}

.boundary {
  width: 100vmax;
  margin-left: auto;
  margin-right: auto;
  height: 0.27vmin;
  background: #F0EDFF;
}

.listTitle-2 {
  font-size: 4.8vmin;
  color: #333333;
}

.area1 {
  margin: 6vmin;
  margin-top: 0;
}

.head {
  display: flex;
  align-items: center;
}

.content1 {
  margin-left: auto;
  margin-right: auto;
  width: 93.3vmax;
  background: rgba(249, 217, 87, .32);
  padding: 5vmin;
  padding-right: 18vmin;
  text-align: left;
  font-size: 3vmin;
  position: relative;
  overflow: hidden;
  min-height: 16vmin;
}

.assWrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  width: 14vmin;
  height: 14vmin;
  bottom: 0;
  right: 0;
  z-index: 100;
}

.orangeCircle {
  width: 28vmin;
  height: 28vmin;
  background: #FFC85D;
  position: absolute;
  bottom: -14vmin;
  right: -14vmin;
  border-radius: 50%;
}

.area2 {
  margin: 6vmin;
}

.content2 {
  margin-left: auto;
  margin-right: auto;
  width: 93.3vmax;
  background: rgb(255, 210, 221);
  padding: 5vmin;
  text-align: left;
  font-size: 4vmin;
  overflow: hidden;
  min-height: 16vmin;
}

.nav {
  height: 11.73vmin;
  width: 100%;
  position: relative;
}

.navback {
  position: absolute;
  left: 2vmin;
  top: 1vmin;
}

.upTitle {
  margin: 6vmin 8vmin 6vmin 8vmin;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.type {
  font-size: 5.33vmin;
  color: #333333;
}

.score {
  font-size: 3.73vmin;
  color: #333333;
}

.scoreNum {
  font-size: 6vmin;
  color: #3654FD;
}

.questions {
  margin-left: 8vmin;
  margin-right: 8vmin;
  height: 45vmin;
  overflow: auto;
}

.btnWrapper {
  width: 100%;
  height: 20vmin;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.checkBtn {
  width: 35.5vmax;
  height: 11.73vmin;
  border-radius: 22.4vmin;
  background: #FF7498;
  color: white;
  font-size: 4vmin;
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle {
  display: inline-flex !important;
  width: 12.8vmin;
  height: 12.8vmin;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
  font-size: 3.73vmin;
  margin-right: 5vmin;
  margin-bottom: 3vmin;
}

.wrong {
  color: #D35925;
  border: 0.53vmin solid #D35925;
}

.true {
  color: #5EA253;
  border: 0.27vmin solid #5EA253;
}

