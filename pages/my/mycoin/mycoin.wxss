.ctn {
  width: 100%;
  height: 100vh;
  background: white;
}

.wrapper {
  height: 320rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
}

.question {
  font-size: 26rpx;
  color: #3654FD;
  position: absolute;
  top: 16rpx;
  right: 48rpx;
}

.goldWrapper {
  display: flex;
  flex-direction: row;
}

.coin {
  height: 60rpx;
  width: 60rpx;
}

.money {
  font-size: 60rpx;
  margin-left: 16rpx;
}

.navi {
  width: 368rpx;
}

.normalSize {
  font-size: 28rpx;
  padding-bottom: 0rpx;
  height: 64rpx !important;
  line-height: 64rpx !important;
}

.bigSize {
  font-size: 30rpx;
}

.color_0 {
  color: rgb(111, 102, 207);
  border-bottom: 6rpx solid rgb(111, 102, 207);
}

.color_1 {
  color: rgb(119, 214, 255);
  border-bottom: 6rpx solid rgb(119, 214, 255);
}

.color_2 {
  color: rgb(255, 159, 160);
  border-bottom: 6rpx solid rgb(255, 159, 160);
}

.swiper {
  height: calc(100vh - 64rpx - 320rpx);
  overflow: hidden;
}

.card {
  height: 160rpx;
  width: 94%;
  margin-left: 3%;
  margin-right: 3%;
  border-bottom: 2rpx solid #F0EDFF;
  position: relative;
}

.detail {
  position: absolute;
  left: 40rpx;
  top: 44rpx;
}

.detail .line1 {
  font-size: 32rpx;
}

.detail .line2 {
  font-size: 24rpx;
  color: #969696;
  margin-top: 12rpx;
}

.number {
  position: absolute;
  right: 80rpx;
  font-size: 40rpx;
  bottom: 60rpx;
}