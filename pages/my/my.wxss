}

.card {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  font-size: 22rpx;
  color: #4e4a80;
}

.imgBox {
  background: rgba(54, 84, 253, .1);
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
  position: relative;
}

.card image {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  left: 17rpx;
  top: 17rpx;
}

.space {
  height: 8rpx;
  width: 100%;
  background: rgb(240, 237, 255);
}

.boundary {
  height: 2rpx;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  background: rgb(240, 237, 255);
}

.cell {
  box-sizing: border-box;
  height: 80rpx !important;
  width: 100%;
  font-size: 28rpx;
}

.icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 15px;
}
