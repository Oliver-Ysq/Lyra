.swiper {
  height: calc(100vh - 90rpx);
  width: 100vw;
  background: #FBFAFF;
}

.navColor {
  color: #9E9AC5;
  font-size: 28rpx;
}

.navpick {
  color: rgb(78, 74, 128);
  font-size: 32rpx;
}

.card {
  width: 700rpx;
  height: 156rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 14rpx #EAE8FC;
  margin-left: auto;
  margin-right: auto;
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  background: white;
}

swiper-item {
  overflow: scroll !important;
}

.left {
  flex: 39;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding-left: 20rpx;
}

.right {
  flex: 11;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

.rightBg1 {
  background: rgba(54, 84, 253, .5);
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx
}

.rightBg2 {
  background: rgba(54, 84, 253, .1);
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx
}

.color-white {
  color: white;
}

.color-purple {
  color: #9E9AC5;
}

.notice {
  font-size: 36rpx;
}

.check {
  font-size: 36rpx;
  font-weight: bold;
}

.text28 {
  font-size: 28rpx;
}
.cardBottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.time {
  font-size: 24rpx;
  color: #8E8E93;
}

.name {
  font-size: 32rpx;
}

.course {
  font-size: 26rpx;
  color: #8E8E93;
  margin-left: 16rpx;
}

.detail {
  display: flex;
  align-items: baseline;
}

.score{
  font-size: 24rpx;
  color: #3654FD;
  padding-right: 24rpx;
}

.card-image-container{
  height: 90%;
  align-items: center;
  display: flex;
  justify-content: center;
  position: relative;
}