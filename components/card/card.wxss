.main {
  width: 95%;
  border-radius: 12rpx;
  margin: 20rpx auto 0 auto;
  background: white;
}
.main-hover{
  width: 95%;
  border-radius: 12rpx;
  margin: 20rpx auto 0 auto;
  box-shadow:0px 0px 10px  #F0EDFF inset; 
}

.head {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  padding-left: 48rpx;
  padding-top: 32rpx;
}

.dot {
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  margin-top: 8rpx;
  margin-right:6rpx;
  border-radius: 50%;
  background: #ff7498;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
}

.sign {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: -6rpx;
  margin-left: 6rpx;
}

.footer {
  display: flex;
  flex-direction: row;
}

.profileImg {
  border-radius: 50%;
  height: 64rpx;
  width: 64rpx;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
  margin-right: 10rpx;
}

.name {
  font-size: 26rpx;
  color: #333;
  text-align: right;
}

.time {
  font-size: 18rpx;
  color: #8e8e93;
  text-align: right;
}

.line {
  margin: 0 auto;
  width: 95%;
  height: 1rpx;
  background-color: #eeeaff;
}

.bottom {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.icon {
  height: 100%;
  padding-left: 40rpx;
}

.star {
  width: 42rpx;
  height: 42rpx;
  margin-bottom: 4rpx;
  margin-top: 16rpx;
  margin-right: 12rpx;
}

.share {
  width: 49rpx;
  height: 49rpx;
  margin-top: 12rpx;
}

.answer {
  height: 80%;
  display: flex;
  flex-direction: row;
}

.answer image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 22rpx;
  margin-right: 8rpx;
}

.number {
  line-height: 80rpx;
  height: 80rpx;
  font-size: 22rpx;
  color: #9c9c9c;
  margin-right: 20rpx;
}

.text {
  line-height: 80rpx;
  margin-right: 4rpx;
  height: 80rpx;
  color: #9c9c9c;
  font-size: 22rpx;
}
